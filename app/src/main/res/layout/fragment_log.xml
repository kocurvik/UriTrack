<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kocur.tabapp.MainActivity$PlaceholderFragment">

    <EditText
        android:id="@+id/logDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/logList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/space9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space8"
        android:divider="@color/ap_charcoal"
        android:dividerHeight="0dp" />

    <Button
        android:id="@+id/buttonLogDecrease"
        android:text="@string/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logDate"
        android:layout_toStartOf="@+id/logDate"
        android:layout_above="@+id/linearLayout2" />

    <Button
        android:id="@+id/buttonLogIncrease"
        android:text="@string/arrowright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/logDate"
        android:layout_toRightOf="@+id/logDate"
        android:layout_above="@+id/linearLayout2" />

    <Space
        android:id="@+id/space8"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logDate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:id="@+id/toggleUrinationPic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/urination" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:id="@+id/toggleIntakePic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/intake" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:id="@+id/toggleLeakPic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/leak" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:id="@+id/toggleUrgePic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/urge" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:id="@+id/toggleCatheterPic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/catheter" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>

    <TextView
        android:id="@+id/ioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:id="@+id/space9"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/ioTextView"
        android:layout_toLeftOf="@+id/ioTextView"
        android:layout_toStartOf="@+id/ioTextView" />

</RelativeLayout>
